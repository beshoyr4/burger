<header class="bg-dark text-center py-5 mb-4">
  <div class="container">
    <h1>Eat-Da-Burgers</h1>
  </div>
</header>

<div class="container">

  <section class="burgers">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <div class="card mb-5 mb-lg-0">
            <div class="card-body">
              <h5 class="text-uppercase text-center">Waiting to be Devoured</h5>
              <ul class="fa-ul">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
              </ul>
            </div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="card mb-5 mb-lg-0">
            <div class="card-body">
              <h5 class="text-uppercase text-center">Devoured</h5>
              <ul class="fa-ul">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="add_burgers">

    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="card mb-5 mb-lg-0">
            <div class="card-body">
              <h5 class="text-uppercase text-center">Add a Burger</h5>
              <form class="create-form">

                <div class="form-group">
                  <label for="ca"> Burger Name:</label>
                  <input type="text" id="burger">
                </div>
                <button type="submit" class="btn btn-warning create-form">Add Burger</button>
              </form>
            </div>
          </div>
        </div>
      </div>
  </section>

</div>